<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GerenciadorDeBibioteca</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GerenciadorDeBibioteca.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Botão de menu hambúrguer no canto esquerdo -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <a class="navbar-brand ms-2" asp-area="" asp-controller="Home" asp-action="Index">FINDBOOKS</a>

                <!-- Itens do menu colapsável -->
                <div class="collapse navbar-collapse" id="navbarMenu">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary nav-link m-1" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary nav-link m-1" asp-area="" asp-controller="Faculdade" asp-action="Index">Faculdades</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary nav-link m-1" asp-area="" asp-controller="Livro" asp-action="Index">Livro</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary nav-link m-1" asp-area="" asp-controller="Usuario" asp-action="Index">Perfil</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main> 
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - GerenciadorDeBibioteca - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
